{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Static Build",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run static:build",
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "name": "Watch Static Build",
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run static:dev",
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    }
  ],
  "compounds": [
    {
      "name": "Dev + Chrome",
      "configurations": ["Dev", "Chrome"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      }
    }
  ]
}
